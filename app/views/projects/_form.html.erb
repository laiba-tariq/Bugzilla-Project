<% if @project.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
    <%= @project.errors.full_messages.to_sentence %>
  </div>
<% end %>
<%= render "devise/shared/error_messages", resource: @project %>
<div>
  <%= form_for @project, html: { class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4' } do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.text_field :name, class: 'form-input w-full py-2 px-3 border focus:border-indigo-500 focus:outline-none rounded-md', required: 'true' %>
    </div>
    <div class="mb-4">
      <%= f.label :description, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.text_area :description, class: 'form-textarea w-full py-2 px-3 border focus:border-indigo-500 focus:outline-none rounded-md resizable-textarea' %>
    </div>
    <div class="flex items-center justify-between">
      <%= f.submit 'Save', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue active:bg-blue-800' %>
      <%= link_to 'Cancel', projects_path, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-red active:bg-red-800' %>
    </div>
  <% end %>
</div>
