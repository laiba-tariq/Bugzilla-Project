<% if @project.errors.any? %>
  <div class="alert alert-danger">
    <%= @project.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= render "devise/shared/error_messages", resource: @project %>

<%= form_for @project, html: { class: 'custom-form' } do |f|%>
  <div class="form-group">
    <%= f.label :name, class: 'col-md-12' %>
    <%= f.text_field :project_name, class: 'form-control', required: 'true' %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-md-12' %>
  <%= f.text_area :project_description, class: 'form-control resizable-textarea' %>
    </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', projects_path, class: 'btn btn-danger' %>
  </div>
<% end %>
