
<% if user_signed_in? %>
  <%= render 'projects/index', current_user %>
<% else %>
  <div class="container-fluid text-center">
  <%= image_tag 'logoIcon.png' %>
  <h2 class="text-dark">Track and manage bugs effortlessly with Bugzilla.</h2>
  <div class="d-flex justify-content-center align-items-center">
    <%= link_to "Login", new_user_session_path, class: "btn btn-primary mr-2" %>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary" %>
  </div>
</div>
<% end %>
